{
  "name": "mithril-markdown-wysiwyg",
  "version": "0.2.2",
  "description": "A powerful WYSIWYG markdown editor for Mithril.js with dual-mode editing, theme support, and extensive formatting options",
  "keywords": [
    "mithril",
    "markdown",
    "wysiwyg",
    "editor",
    "typescript",
    "rich-text",
    "text-editor"
  ],
  "author": "Erik Vullings",
  "license": "MIT",
  "homepage": "https://github.com/erikvullings/mithril-markdown-wysiwyg#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/erikvullings/mithril-markdown-wysiwyg.git"
  },
  "bugs": {
    "url": "https://github.com/erikvullings/mithril-markdown-wysiwyg/issues"
  },
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "type": "module",
  "types": "dist/index.d.ts",
  "browser": "dist/index.umd.js",
  "unpkg": "dist/index.umd.min.js",
  "jsdelivr": "dist/index.umd.min.js",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "browser": "./dist/index.umd.js",
      "types": "./dist/index.d.ts"
    },
    "./dist/index.css": "./dist/index.css",
    "./css": "./dist/index.css",
    "./style.css": "./dist/index.css",
    "./package.json": "./package.json"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:watch": "rollup -c --watch",
    "dev": "pnpm build:watch",
    "test": "echo 'No tests specified'",
    "prepublishOnly": "pnpm build"
  },
  "peerDependencies": {
    "mithril": "^2.3.7"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.0",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "@types/mithril": "^2.2.7",
    "@types/node": "^24.5.2",
    "mithril": "^2.3.7",
    "rollup": "^4.52.2",
    "rollup-plugin-dts": "^6.2.3",
    "rollup-plugin-postcss": "^4.0.2",
    "semantic-release": "^24.0.0",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2"
  }
}
